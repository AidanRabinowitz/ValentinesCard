<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              mc:Ignorable="d"
              x:Class="ValentineApp.MainPage">

    <StackLayout>
        <Label Text="Will You Be My Valentine?" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
        <Button x:Name ="yesButton" Text="Yes" Clicked="OnYesClicked" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
        <Button x:Name="noButton" Text="No" Clicked="OnNoClicked" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
    </StackLayout>

</ContentPage>
